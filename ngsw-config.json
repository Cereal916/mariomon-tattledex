{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js"
        ],
        "urls": [
          "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/**"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "prefetch",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/type-icons/png/*.png", 
          "/assets/damage-category-icons/*.png",
          "/assets/data/*.(csv|json)",
          "/assets/*.png"
        ]
      }
    },
    {
      "name": "thumbnails",
      "installMode": "prefetch",
      "updateMode":"prefetch",
      "resources": {
        "files": [
          "/assets/thumbnails-compressed/*.png"
        ]
      }
    },
    {
      "name": "fonts-and-icons",
      "installMode": "lazy",
      "updateMode": "lazy",
      "resources": {
        "files": [
          "/assets/fonts/AlleynW01-Regular/*.(eot|svg|ttf|woff|woff2)",
          "/assets/icons/*.png"        ],
        "urls": [
          "https://raw.githubusercontent.com/HybridShivam/Pokemon/master/assets/images/*.png"
        ]
      }
    }
  ]
}
